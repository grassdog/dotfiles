function take() {
    mkdir -p "$1"
    cd "$1" 
}

function jpuge() {
  rvm use 1.4.1@puge
  export JAVA_OPTS='-d32 -client'
  export JAVA_MEM='-Xmx1g'
  export JAVA_STACK='-Xss2048k'
}

# Look up something on wikipedia
function wiki() {
  dig +short txt $1.wp.dg.cx
}

